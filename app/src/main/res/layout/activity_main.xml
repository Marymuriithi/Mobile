<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" >

    <EditText
            android:id="@+id/First Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="First Name"
            tools:layout_editor_absoluteX="36dp" />

    <EditText
            android:id="@+id/Last Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="62dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Last Name"
            app:layout_constraintTop_toBottomOf="@+id/First Name"
            tools:layout_editor_absoluteX="37dp" />

    <EditText
            android:id="@+id/Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="62dp"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:text="Email"
            app:layout_constraintTop_toBottomOf="@+id/Last Name"
            tools:layout_editor_absoluteX="40dp" />

    <EditText
            android:id="@+id/Phone Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="62dp"
            android:ems="10"
            android:inputType="phone"
            android:text="Phone Number"
            app:layout_constraintTop_toBottomOf="@+id/Email"
            tools:layout_editor_absoluteX="37dp" />

    <EditText
            android:id="@+id/Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="62dp"
            android:ems="10"
            android:inputType="textPassword"
            android:text="Password"
            app:layout_constraintTop_toBottomOf="@+id/Phone Number"
            tools:layout_editor_absoluteX="43dp"
            tools:text="Password" />

    <EditText
            android:id="@+id/Cornfirm Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="62dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            app:layout_constraintTop_toBottomOf="@+id/Password"
            tools:layout_editor_absoluteX="43dp"
            tools:text="Confirm Password" />

    <Button
            android:id="@+id/Sign Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button"
            tools:layout_editor_absoluteX="146dp"
            tools:layout_editor_absoluteY="620dp"
            tools:text="Sign Up" />

</android.support.constraint.ConstraintLayout>